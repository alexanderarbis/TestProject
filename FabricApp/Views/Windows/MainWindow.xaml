<Window x:Class="FabricApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:el="FabricApp.Views.Elements"
        xmlns:vm="clr-namespace:FabricApp.ViewModels"
        xmlns:cv="clr-namespace:FabricApp.ViewModels"
        xmlns:local="clr-namespace:FabricApp"
        mc:Ignorable="d"
        
        Title="{Binding Role, Converter = {StaticResource RoleConverter}, UpdateSourceTrigger = PropertyChanged}" 
        Height="855" 
        Width="1218"
        Background="#242424"
        ResizeMode="CanResize">

    <Window.DataContext>
        <vm:ViewModelMainWindow/>
    </Window.DataContext>
    
    <Grid>
        <Frame
            Margin="5"
            NavigationUIVisibility="Hidden"

            Content="{Binding Page, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>

</Window>
